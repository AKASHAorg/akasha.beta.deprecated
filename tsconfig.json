{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "removeComments": true,
        "inlineSources": true,
        "sourceMap": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "experimentalDecorators": true,
        "rootDir": "main",
        "emitDecoratorMetadata": true,
        "typeRoots": ["node_modules/@types"],
        "outDir": "dist/main"
    },
    "exclude": ["node_modules"]
}
