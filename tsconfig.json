{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "inlineSources": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "experimentalDecorators": true,
        "rootDir": "main",
        "emitDecoratorMetadata": true,
        "typeRoots": ["node_modules/@types"]
    }
}
