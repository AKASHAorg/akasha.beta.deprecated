{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "inlineSources": true,
        "sourceMap": true,
        "moduleResolution": "classic",
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "experimentalDecorators": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "typings/browser",
        "typings/browser.d.ts"
    ]
}
